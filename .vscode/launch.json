{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Launch client (index)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Launch client (CSR)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000/client"
    },
    {
      "name": "Launch client (SSR)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000/server"
    },
    {
      "name": "Launch tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--testTimeout",
        "86400000",
        "-t",

        // Put an expression here to only run matching tests
        ""
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
    {
      "name": "Launch stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}